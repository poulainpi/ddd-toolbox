---
export interface Props {
  toolName: string;
}

const { toolName } = Astro.props;
---

<div class="min-h-screen flex items-center justify-center bg-background">
  <div class="text-center">
    <div class="relative mb-8">
      <div class="w-16 h-16 mx-auto border-4 border-muted rounded-full animate-spin border-t-primary"></div>
      <div class="absolute inset-0 w-16 h-16 mx-auto border-4 border-transparent rounded-full animate-pulse border-t-primary/60 animation-delay-150"></div>
    </div>
    <h2 class="text-2xl font-semibold text-foreground mb-2">
      Preparing {toolName}
    </h2>
    <p class="text-muted-foreground mb-4">
      Setting up your canvas...
    </p>
    <div class="flex items-center justify-center space-x-1">
      <div class="w-2 h-2 bg-primary rounded-full animate-bounce animation-delay-0"></div>
      <div class="w-2 h-2 bg-primary rounded-full animate-bounce animation-delay-150"></div>
      <div class="w-2 h-2 bg-primary rounded-full animate-bounce animation-delay-300"></div>
    </div>
  </div>
</div>
