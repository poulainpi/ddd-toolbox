{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchPackageNames": ["/eslint/"],
      "groupName": "eslint",
      "schedule": ["* * 1 * *"]
    },
    {
      "matchPackageNames": ["/typescript/"],
      "groupName": "typescript"
    }
  ],
  "automergeType": "branch",
  "minor": {
    "automerge": true
  },
  "patch": {
    "automerge": true
  }
}
