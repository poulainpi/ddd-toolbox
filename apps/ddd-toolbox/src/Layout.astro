---
import { Toaster } from '@ddd-toolbox/ui'
import { SITE_URL } from './constants/seo'
import './styles.css'

const canonicalUrl = new URL(Astro.url.pathname, SITE_URL).href
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <base href="/" />

  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={canonicalUrl} />
  <link rel="sitemap" href="/sitemap-index.xml" />

  <link rel="icon" type="image/x-icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" href="/favicon.ico" />

  <script>
    // Apply theme immediately to prevent flash
    (function() {
      function getSystemTheme() {
        return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light'
      }

      function getUserTheme() {
        const storage = localStorage.getItem('TLDRAW_USER_DATA_v3')
        if (storage) {
          try {
            const data = JSON.parse(storage)
            return data.user.colorScheme ?? 'system'
          } catch (e) {
            return 'system'
          }
        }
        return 'system'
      }

      function resolveTheme() {
        const userTheme = getUserTheme()
        return userTheme === 'system' ? getSystemTheme() : userTheme
      }

      const resolvedTheme = resolveTheme()
      document.documentElement.classList.add(resolvedTheme)
    })()
  </script>
</head>
<body>
<slot />
<Toaster client:only="react" />
</body>
</html>
