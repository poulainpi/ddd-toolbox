{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "Bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ddd-toolbox/domain-storytelling": ["libs/feature-domain-storytelling/src/index.ts"],
      "@ddd-toolbox/domain-storytelling-constants": ["libs/feature-domain-storytelling/src/constants-index.ts"],
      "@ddd-toolbox/event-storming": ["libs/feature-event-storming/src/index.ts"],
      "@ddd-toolbox/event-storming-constants": ["libs/feature-event-storming/src/constants-index.ts"],
      "@ddd-toolbox/shared-canvas": ["libs/shared-canvas/src/index.ts"],
      "@ddd-toolbox/ui": ["libs/ui/src/index.ts"],
      "@ddd-toolbox/ui-loadable-icon": ["libs/ui/src/loadable-icon-index.ts"],
      "@ddd-toolbox/util": ["libs/util/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
