---
import { AstroSeo } from '@astrolib/seo'
import Layout from '../Layout.astro'
import { HeroSection } from '../components/hero-section'
import { ToolsGrid } from '../components/tools-grid'
import { SiteHeader } from '../components/site-header'
import StructuredData from '../components/structured-data.astro'

const pageDescription = "A comprehensive collection of Domain-Driven Design tools including Domain Storytelling, Event Storming, Context Mapping, and more. Build better software through collaborative domain modeling."
---

<AstroSeo
  title="DDD Toolbox | Domain-Driven Design Tools"
  description={pageDescription}
/>

<Layout>
  <StructuredData type="website" description={pageDescription} />
  <SiteHeader client:load />
  <main>
    <HeroSection client:load />
    <ToolsGrid client:load />
  </main>
</Layout>
